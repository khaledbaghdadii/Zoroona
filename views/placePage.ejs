<!--Other sections bbelow navbae-->
<section>
  <div class="text-center">
    <img style="height:400px" class="img-fluid mx-auto img-thumbnail" src="<%=place[0].image%>">
  </div>
  <div class="row">
    <div class="col-sm-12 text-center">
      <h1 class="display-2 text-secondary text-warning text-capitalize">
         <%=place[0].name%>
        </h1> 
        <a href="#reserveForm"><button class="btn btn-outline-secondary">Reserve a Spot</button> </a>
        
      <h2 class="font-weight-light font-italic">
          <%=place[0].description%>
      </h2>
    
    </div>
  </div>
</section>

  <!--packages-->
  <section class="p-5  bg-light">
    <div class="container-fluid">
      <!--title-->
      <div class="row">
        <div class="col text-center mb-3">
          <h1 class="text-warning display-2">Packages</h1>
          <p class="lead text-secondary">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
            Suspendisse condimentum dapibus blandit. Donec et rhoncus purus.
          </p>
        </div>
      </div>
      <!--end of title-->
      <div class="row">
        <%packages.forEach((package)=>{%>
          <div class="col-lg-3 col-sm-6">
           
            <h2 class="my-3 text-warning"><%=package.name%></h2>
            <p class="text-muted">
              <%=package.description%> <span>$<%=package.price%></span>
            </p>

          </div>

       <% })%>
        
        
      </div>
    </div>
  </section>
  <!--end of packages-->

<!--reviews-->
<section class="p-sm-5 p-2 bg-dark">
  <div class="container-fluid">
    <!--title-->
    <div class="row">
      <div class="col text-center mb-3">
        <h1 class="text-warning display-2">Reviews</h1>
        
      </div>
    </div>
    <!--end of title-->
    <div class="row">
      <% reviews.forEach((review)=>{ %>
      <div class="col-lg-3 col-sm-10 mx-auto mb-4">
        <div class="card">
          <div class="card-body">
            <div class="card-title">
              
              <h5 class="text-secondary text-small font-weight-bold font-italic">User: <%=review.name%></h5>
             
              <hr>
            </div>
            <div class="card-subtitle">
              <p class="lead" class="text-secondary"><span style="width:20px"><i style="width:30px" class="far fa-star text-success"></i></span>
              Rating: <%=review.rating%>/5
              </p>
              <p class="lead" class="text-secondary font-italic"><span style="width:20px"><i style="width:30px" class="fas fa-comment text-success"></i></span>
              "<%=review.feedback%>"
                </p>
            </div>
            
          </div>
        </div>
      </div>
      <% }) %>
      </div>
    
  </div>
</section>
<!--contact-->
<section class="p-5 bg-light">
  <div class="container-fluid">
    <!--title-->
    <div class="row">
      <div class="col text-center mb-3">
        <h1 class="text-warning display-2">Give your feedback</h1>
        <p class="lead text-light">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit.
          Suspendisse condimentum dapibus blandit. Donec et rhoncus purus.
        </p>
      
      </div>
    </div>


    <!--end of title-->
    <!--form for review-->
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="text-center text-secondary">
          <h2>Did you enjoy your time?</h2>
          <p>Leave a review for people to know!</p>
       
        <form action="/addreview" method="POST">
          <div class="form-group">
            <label for="">Client id</label>
            <input name="clientId" type="text" class="form-control" id=""  placeholder="Enter Your Name">
            
          </div>
          <div class="form-group">
            <label for="">Email</label>
            <input name="clientId" type="text" class="form-control" id=""  placeholder="Enter Your Email">
            
          </div>
          <div class="form-group">
          
            <input name="placeId" type="hidden" value="<%=place[0].place_id%>" class="form-control" id="exampleInputEmail1" >
            
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Rating</label>
            <input name="rating" type="number" min="1" max="5" class="form-control" id="exampleInputEmail1" placeholder="Enter Rating">
            
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Feedback Message</label>
            <input name="feedback" type="text" class="form-control" id="exampleInputPassword1" placeholder="Enter Feedback Message">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Date</label>
            <input  name="date" type="date" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
            
          </div>
          
          <button class="btn btn-outline-warning">Submit Review</button>
        </form>
      </div>
    </div>
  </div>
  <!--end of review form-->\
  
  <div id="reserveForm">
    <% if(clientt.length==0){ %>
      <h1>You need to be logged in to reserve a place</h1>
    <% } else{ %>  
      <!--form for review-->
      <div class="row justify-content-center">
       <div class="col-lg-6 col-md-8 col-sm-10">
         <div class="text-center text-secondary">
           <h2>Reserve your spot</h2>
        
         <form action="/reservation" method="POST">
           <div class="form-group">
            
             <input name="clientId" type="hidden" class="form-control" id=""  value="<%=clientt[0].client_id%>">
             
           </div>
           <div class="form-group">
           
             <input name="placeId" type="hidden" value="<%=place[0].place_id%>" class="form-control" id="exampleInputEmail1" >
             
           </div>
           
           
           <div class="form-group">
             <label for="exampleInputEmail1">Number of People</label>
             <input name="numOfPeople" type="number" min="1" max="5" class="form-control" id="exampleInputEmail1" placeholder="Enter Rating">
             
           </div>
           
           <div class="form-group">
             <label for="exampleInputEmail1">Start Date</label>
             <input  name="startDate" type="date" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
             
           </div>
           <div class="form-group">
             <label for="exampleInputEmail1">End Date</label>
             <input  name="endDate" type="date" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
             
           </div>
           <div class="form-group">
             <p>Please select the package:</p>
             <%packages.forEach((package)=>{%>
               <input required type="radio" id="pack" name="packageId" value="<%=package.package_id%>">
               <label for="pack"><%=package.name%></label><br>
            <% })%>
     
           </div>
           <button class="btn btn-outline-warning">Submit Review</button>
         </form>
       </div>
     </div>
   </div>
   <!--end of review form-->
   <% } %>
  </div>
 

  </form>
</section>
<!--end of contact-->

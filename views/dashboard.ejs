<section>
  <!--form for reserve-->
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <div class="text-center text-secondary">
        <h2>Add a Place</h2>
     
     <form action="/place" method="POST">
      <div class="form-group">
        <label  for="exampleInputEmail1">Name of Place</label>
        <input required name="name" type="text" min="1" max="5" class="form-control" id="exampleInputEmail1" placeholder="Enter the name of the place">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Place Email</label>
        <input required  name="email" type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
        
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Location</label>
        <input required  name="location" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter location">
        
      </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Place Phone Number</label>
          <input required name="phoneNumber" type="number" class="form-control" id="exampleInputEmail1" placeholder="Enter phone number">
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Wesbite</label>
          <input required  name="website" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter website">
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Price Per Person</label>
          <input required  name="pricePerPerson" type="number" class="form-control" id="exampleInputEmail1" placeholder="Enter price per person">
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Sector</label>
          <br>
          <input  required type="radio" id="hasFood" name="sector" value="public">
               <label for="hasSeating">Public</label><br>
          <input required type="radio" id="hasSeating" name="sector" value="private">
               <label for="hasFood">Private</label><br>
          
        </div>
        <div class="form-group">
         
          <input  name="managerId" type="hidden" value="<%=manager.id%>"class="form-control" id="exampleInputEmail1">
          
        </div>
        <div class="form-group">
         
          <input  name="categoryId" type="hidden" value="1"class="form-control" id="exampleInputEmail1">
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Image URL</label>
          <input required  name="image" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter image URL">
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Description</label>
          <input required name="description" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter description">
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Type</label>
          <input required  name="type" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter type">
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Weather</label>
          <input required  name="weather" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter weather">
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Orientation</label>
          <input required name="orientation" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter orientation">
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Has Food</label>
          <br>
          <input required type="radio" id="hasFood" name="hasFood" value="1">
               <label for="hasFood">Yes</label><br>
          <input type="radio" id="hasFood" name="hasFood" value="0">
               <label for="hasFood">No</label><br>
        </div>
        <div required class="form-group">
          <label for="exampleInputEmail1">Has Seating</label>
          <br>
          <input required type="radio" id="hasFood" name="hasSeating" value="1">
               <label for="hasSeating">Yes</label><br>
          <input required type="radio" id="hasSeating" name="hasSeating" value="0">
               <label for="hasFood">No</label><br>
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Has Accomodation</label>
          <br>
          
          <input required type="radio" id="hasAccomodation" name="hasAccomodation" value="1">
               <label for="hasFood">Yes</label><br>
          <input required type="radio" id="hasFood" name="hasAccomodation" value="0">
               <label for="hasAccomodation">No</label><br>
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Need For Reservation</label>
          <br>
          <input required type="radio" id="needForReservation" name="needForReservation" value="1">
          <label for="hasFood">Yes</label><br>
     <input type="radio" id="needForReservation" name="needForReservation" value="0">
          <label for="needForReservation">No</label><br>
          
        </div>
        <button class="btn btn-outline-warning">Add place</button>
      </form>
    </div>
  </div>
</div>

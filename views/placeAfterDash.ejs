<section>
    <div class="text-center">
      <img style="height:400px" class="img-fluid mx-auto img-thumbnail" src="<%=place[0].image%>">
    </div>
    <div class="row">
      <div class="col-sm-12 text-center">
        <h1 class="display-2 text-secondary text-warning text-capitalize">
           <%=place[0].name%>
          </h1> 
         <div class="row">
           <div class="col-12">
          <form class="mt-4" action="/placedelete" method="POST">
            <button type="submit" class="btn btn-danger btn-sm ml-auto mb-0">Delete</button>
            <input type="hidden" name="placeId" value="<%=place[0].place_id%>">
            </form>
           
            <form class="mt-4" action="/dashboard/places/<%=place[0].place_id%>/edit" method="POST">
              <button type="submit" class="btn btn-success btn-sm mt-0">Edit</button>
              <input type="hidden" name="placeId" value="<%=place.place_id%>">
              </form></div>
              <br>
        <h2 class="font-weight-light font-italic mx-auto">
            <%=place[0].description%>
        </h2>
     
      </div>
    </div>
  </section>
  <hr>
 <section class="mt-3 mb-3">
    <h3 class="text-warning text-center mb-3">Reservations</h3>
    <table class="table table-striped bg-light text-center">
      <thead>
        <tr class="text-muted">
          <th>#</th>
          <th>Client Name</th>
          <th>Phone #</th>
          <th># of People</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Package</th>
        </tr>
      </thead>
      <tbody>
          <%reservations.forEach((reservation)=>{%>
            <tr>
                <th><%=reservation.reservation_id%></th>
                <td><%=reservation.name%></td>
                <td><%=reservation.phone_number%></td>
                <td><%=reservation.num_of_people%></td>
                <td><%=reservation.start_date%></td>
                <td><%=reservation.end_date%></td>
                <td><%=reservation.packageName%></td>
              </tr>
          <%})%>
      
        
      </tbody>
    </table>
 </section>
 <hr>
 <!--reviews-->
<section class="p-sm-5 p-2 bg-secondary">
    <div class="container-fluid">
      <!--title-->
      <div class="row">
        <div class="col text-center mb-3">
          <h1 class="text-warning display-2">Reviews</h1>
          
        </div>
      </div>
      <!--end of title-->
      <div class="row">
        <% reviews.forEach((review)=>{ %>
        <div class="col-lg-3 col-sm-10 mx-auto mb-4">
          <div class="card">
            <div class="card-body">
              <div class="card-title">
                
                <h5 class="text-secondary text-small font-weight-bold font-italic">User: <%=review.client_id%></h5>
               
                <hr>
              </div>
              <div class="card-subtitle">
                <p class="lead" class="text-secondary"><span style="width:20px"><i style="width:30px" class="far fa-star text-success"></i></span>
                Rating: <%=review.rating%>/5
                </p>
                <p class="lead" class="text-secondary font-italic"><span style="width:20px"><i style="width:30px" class="fas fa-comment text-success"></i></span>
                "<%=review.feedback%>"
                  </p>
              </div>
              
            </div>
          </div>
        </div>
        <% }) %>
        </div>
      
    </div>
  </section>
  <section class="mb-2 mt-3">
    <!--form for reserve-->
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="text-center">
          <h2 class="text-warning">Add a Package</h2>
       
       <form action="/package" method="POST">
        <div class="form-group">
          <label for="exampleInputEmail1">Name of Package</label>
          <input name="name" type="text"  class="form-control" id="exampleInputEmail1" placeholder="Enter the name of the package">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Package Price</label>
            <input name="price" type="number" class="form-control" id="exampleInputEmail1" placeholder="Enter Rating">
            
          </div>
          <div class="form-group">
           
            <input  name="placeId" type="hidden" value="<%=place[0].place_id%>"class="form-control" id="exampleInputEmail1">
            
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Description</label>
            <input name="description" type="text"  class="form-control" id="exampleInputEmail1" placeholder="Enter the name of the package">
          </div>
          
          
          <button class="btn btn-outline-warning">Submit Review</button>
        </form>
      </div>
    </div>
  </div>
  <!--end of reserve form-->
  </section>

  <!--packages-->
  <section class="p-5  bg-light">
    <div class="container-fluid">
      <!--title-->
      <div class="row">
        <div class="col text-center mb-3">
          <h1 class="text-warning display-2">Packages</h1>
          <p class="lead text-secondary">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
            Suspendisse condimentum dapibus blandit. Donec et rhoncus purus.
          </p>
        </div>
      </div>
      <!--end of title-->
      <div class="row">
        <%packages.forEach((package)=>{%>
          <div class="col-lg-3 col-sm-6">
           <div class="row">
               <div class="col-8 col-sm-8">
                <h2 class="my-3 text-warning"><%=package.name%></h2>
               </div>
           
                <div class="col-4 col-sm-4">
                    
               <form class="mt-4" action="/packagedelete" method="POST">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                <input type="hidden" name="packageId" value="<%=package.package_id%>">
                </form>
                </div>
           </div>
            
                  
            <p class="text-muted">
              <%=package.description%> <span>$<%=package.price%></span>
            </p>

          </div>

       <% })%>
        
        
      </div>
    </div>
  </section>
  <!--end of packages-->